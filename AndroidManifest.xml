<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mydeezerradio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mydeezerradio.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mydeezerradio.SongInput"
            android:label="@string/title_activity_song_input"
            android:parentActivityName="com.example.mydeezerradio.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mydeezerradio.MainActivity" />
        </activity>
        <activity
            android:name="com.example.mydeezerradio.SongSelection"
            android:label="@string/title_activity_song_selection"
            android:parentActivityName="com.example.mydeezerradio.SongInput" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mydeezerradio.SongInput" />
        </activity>
    </application>

</manifest>